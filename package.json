{
  "name": "news-blog",
  "version": "1.0.0",
  "description": "News blog",
  "main": "src/index.js",
  "author": "kbuczynski",
  "license": "ISC",
  "engines": {
    "node": "14.17.5"
  },
  "scripts": {
    "start": "node src/index.js",
    "dev": "concurrently npm:watch:*",
    "dev:docker": "docker-compose up",
    "dev:docker:build": "docker-compose up --build",
    "watch:server": "nodemon src/index.js",
    "watch:scss": "node-sass --output-style compressed -w src/views -o src/public/styles",
    "lint": "npm run lint:js && npm run lint:scss",
    "lint:js": "npx eslint src",
    "lint:js:fix": "npx eslint src --fix",
    "lint:scss": "npx stylelint '**/*.scss'",
    "lint:scss:fix": "npx stylelint '**/*.scss' --fix",
    "env-template": "npx env-template",
    "test": "jest src/",
    "test:watch": "jest src/ --watch",
    "test:coverage": "jest src/ --coverage"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "express-handlebars": "^5.3.4",
    "node-fetch": "^2.6.7",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "concurrently": "^6.3.0",
    "eslint": "^8.6.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.25.4",
    "jest": "^27.4.7",
    "node-sass": "^7.0.1",
    "nodemon": "^2.0.13",
    "stylelint": "^14.2.0",
    "stylelint-config-standard-scss": "^3.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Kbuczynski/news-blog.git"
  },
  "bugs": {
    "url": "https://github.com/Kbuczynski/news-blog/issues"
  },
  "homepage": "https://github.com/Kbuczynski/news-blog#readme"
}
