<article class="articleThumbnail" article-title="{{article.title}}">
  <div class="articleThumbnail__content">
    <h2>{{article.title}}</h2>
    <p>{{article.description}}</p>
  </div>

  <div class="articleThumbnail__more">
    <a href="/article/{{article.id}}" class="more__read">Read More</a>
  </div>
</article>