<section class="comments-list">
    {{#if comments.data}}
      {{#unless isProfile}} {{> message message=comments.message id="comment-message" hide=true }} {{/unless}}
      {{#each comments.data}}
        {{> comment comment=this}}
      {{/each}}
    {{else}}
      {{> message message=comments.message id="comment-message" }}
    {{/if}}
</section>
